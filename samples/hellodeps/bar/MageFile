module bar;
import mage;
import foo;

class Bar : StaticLibrary
{
  @Dependency Foo foo;

  override void configure()
  {
    properties["name"] = "bar";
    properties["sourceFiles"] = [
      Path("bar.h"),
      Path("bar.cpp"),
    ];
    properties.addLinkTarget(foo);

    with(log.Block("Target Bar"))
    {
      log.info("Check it out, this is my dependency foo: %s", foo);
    }
  }
}
