module bar;
import mage;
import foo;

class Bar : StaticLibrary
{
  @Dependency Foo foo;

  override void configure()
  {
    properties.set!"name" = "bar";
    properties.set!"sourceFiles" = [
      Path("bar.h"),
      Path("bar.cpp"),
    ];
    properties.set!"linkTargets" = [ foo ];

    with(log.Block("Target Bar"))
    {
      log.info("Check it out, this is my dependency foo: %s", foo);
    }
  }
}
