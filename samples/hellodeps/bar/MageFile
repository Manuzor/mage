module bar;
import mage;
import foo;

class Bar : StaticLibrary
{
  @Dependency Foo foo;

  override void configure()
  {
    this["name"] = "bar";
    this["sourceFiles"] = [
      Path("bar.h"),
      Path("bar.cpp"),
    ];
    this.addLinkTarget(foo);

    with(log.Block("Target Bar"))
    {
      log.info("Check it out, this is my dependency foo: %s", foo);
    }
  }
}
