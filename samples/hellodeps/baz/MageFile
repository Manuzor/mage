module baz;
import mage;
import foo;
import bar;

class Baz : Executable
{
  @Dependency Bar bar;

  override void configure()
  {
    this["name"] = "baz";
    this["sourceFiles"] = [
      Path("baz.cpp")
    ];
    this.addLinkTarget(bar);

    // Tell the IDE that this is the target to run by default.
    this["isStartup"] = true;
  }
}
