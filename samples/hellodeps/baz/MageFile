module baz;
import mage;
import foo;
import bar;

class Baz : Executable
{
  @Dependency Bar bar;

  override void configure()
  {
    properties["name"] = "baz";
    properties["sourceFiles"] = [
      Path("baz.cpp")
    ];
    properties.addLinkTarget(bar);

    // Tell the IDE that this is the target to run by default.
    properties["isStartup"] = true;
  }
}
