module baz;
import mage;
import foo;
import bar;

class Baz : Executable
{
  @Dependency Bar bar;

  override void configure()
  {
    properties.set!"name" = "baz";
    properties.set!"sourceFiles" = [
      Path("baz.cpp")
    ];
    properties.addLinkTarget(bar);

    // Tell the IDE that this is the target to run by default.
    properties.set!"isStartup" = true;
  }
}
