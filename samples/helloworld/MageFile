import mage;
import std.algorithm;
import std.array;

// Initialize some global properties.

shared static this()
{
  // Set the project's name.
  globalProperties.set!"name" = "hello world";
  // This is a C++ project.
  globalProperties.set!"language" = "cpp";
}

// Declare a target as a subclass of 'Target'. You can use
// the predefined special targets 'Executable' and 'Library'.

class Hello : Executable
{
  this()
  {
    properties.set!"name" = "hello";
    properties.set!"sourceFiles" = [ Path("hello.cpp") ];
  }
}
