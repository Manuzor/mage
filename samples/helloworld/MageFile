import mage;
import std.algorithm;
import std.array;

class Hello : Executable
{
  this()
  {
    this.name = "hello";
    this.sourceFiles = [
      "hello.cpp"
    ].map!(a => Path(a)).filter!(a => a.exists && a.isFile).array;
  }
}

